{
  "name": "insight-hub",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:server",
    "dev:server": "npm run dev --prefix server",
    "dev:client": "npm run dev --prefix client",
    "dev:all": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build:server",
    "build:server": "npm run build --prefix server",
    "build:client": "npm run build --prefix client",
    "build:all": "npm run build:client && npm run build:server",
    "test": "npm run test:server",
    "test:server": "npm run test --prefix server",
    "test:client": "npm run test --prefix client",
    "test:all": "npm run test:server && npm run test:client",
    "install:server": "npm install --prefix server",
    "install:client": "npm install --prefix client",
    "install:all": "npm run install:server && npm run install:client",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check:server",
    "type-check:client": "tsc --project client/tsconfig.json --noEmit",
    "type-check:server": "tsc --project server/tsconfig.json --noEmit",
    "type-check:all": "npm run type-check:client && npm run type-check:server",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "concurrently": "^8.0.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.5.3"
  },
  "private": true,
  "dependencies": {
    "fp-ts": "^2.16.10",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "yamljs": "^0.3.0"
  }
}

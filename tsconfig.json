{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "client/src/**/*",
    "server/app/**/*",
    "server/utils/**/*",
    "server/configuration/**/*",
    "server/controller/**/*",
    "server/repository/**/*",
    "server/dto/**/*",
    "server/service/**/*",
    "server/exception/**/*",
    "server/middleware/**/*",
    "server/common/**/*"
  ],
  "exclude": ["node_modules", "dist", "client/dist", "server/dist"]
}
